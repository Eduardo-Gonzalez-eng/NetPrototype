<Application
    x:Class="NetPrototype.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:NetPrototype"
    StartupUri="Views/Window/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Themes/LightTheme.xaml" />

                <ResourceDictionary Source="Controls/TitleBarControl/CustomTitleBar.xaml" />
                <ResourceDictionary Source="Controls/Button/ButtonStyle.xaml" />
                <ResourceDictionary Source="Controls/TabControl/TabControlStyle.xaml" />
                <ResourceDictionary Source="Controls/TabControl/TabItemStyle.xaml" />
                <ResourceDictionary Source="Controls/ComboBox/ComboBoxStyle.xaml" />
                <ResourceDictionary Source="Controls/TextBox/TextBoxStyle.xaml" />
                <ResourceDictionary Source="Controls/CheckBox/CheckBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
