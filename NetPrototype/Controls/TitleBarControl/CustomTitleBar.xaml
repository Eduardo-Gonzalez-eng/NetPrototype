<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:NetPrototype.Controls.TitleBarControl"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Style TargetType="{x:Type local:CustomTitleBar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CustomTitleBar}">

                    <Border x:Name="TitleBarBorder" Background="White">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="10"
                                Direction="270"
                                Opacity="0.03"
                                ShadowDepth="0.01"
                                Color="Black" />
                        </Border.Effect>
                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border HorizontalAlignment="Stretch">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        Grid.Column="0"
                                        Width="20"
                                        Height="Auto"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        RenderOptions.BitmapScalingMode="HighQuality"
                                        Source="pack://application:,,,/Assets/Image/NetPrototypeIcon.png" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        Padding="0,7"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#353535"
                                        Text="NetPrototype"
                                        TextAlignment="Left" />
                                </Grid>
                            </Border>


                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                Orientation="Horizontal">
                                <Button
                                    x:Name="MinimizeButton"
                                    Width="45"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Content="-"
                                    Style="{DynamicResource ButtonStyle1}" />
                                <Button
                                    x:Name="CloseButton"
                                    Width="45"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Content="X"
                                    Style="{DynamicResource ButtonStyle1}" />
                            </StackPanel>

                        </Grid>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
