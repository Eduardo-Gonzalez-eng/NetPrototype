<UserControl
    x:Class="NetPrototype.Views.Pages.TCPClientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:NetPrototype.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:NetPrototype.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NetPrototype.ViewModels.Pages"
    d:DesignHeight="450"
    d:DesignWidth="400"
    Background="{DynamicResource PrimaryBackgorundColorPage}"
    Foreground="{DynamicResource PrimaryForegroundColor}"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:TCPClientViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:MultiParametersConverter x:Key="MultiParameterConverter" />
    </UserControl.Resources>

    <Border Padding="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <ProgressBar IsIndeterminate="True" Visibility="{Binding ProgessBarConClientVisibility}" />


            <StackPanel Grid.Row="1">
                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="1"
                        Padding="4,4"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Foreground="{DynamicResource PrimaryForegroundColor}"
                        Text="Conéctate al siguiente servidor" />
                    <iconPacks:PackIconCodicons
                        Width="18"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryForegroundColor}"
                        Kind="Info"
                        ToolTip="Establece la siguiente dirección IP y el puerto del servidor al que te quieres conectar."
                        ToolTipService.InitialShowDelay="0" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="ipadress"
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        TextAlignment="Left" />

                    <TextBox
                        x:Name="port"
                        Grid.Column="1"
                        Width="120"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        PreviewTextInput="NumberValidationTextBox"
                        TextAlignment="Center" />

                    <Button
                        Grid.Column="2"
                        Width="120"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Command="{Binding ToggleStartClientCommand}">
                        <Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource MultiParameterConverter}">
                                <Binding ElementName="ipadress" Path="Text" />
                                <Binding ElementName="port" Path="Text" />
                            </MultiBinding>
                        </Button.CommandParameter>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Iniciar" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,10,0,10">
                <TextBlock
                    Padding="4,2"
                    FontSize="12"
                    Foreground="{DynamicResource PrimaryForegroundColor}"
                    Text="Método" />
                <ComboBox
                    Width="180"
                    MinWidth="180"
                    HorizontalAlignment="Left"
                    SelectedIndex="0">
                    <ComboBoxItem Content="Mensajes de texto" />
                </ComboBox>
            </StackPanel>

            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="1"
                        Margin="0,2,0,2"
                        Padding="4,2"
                        FontSize="12"
                        Foreground="{DynamicResource PrimaryForegroundColor}"
                        Text="Mensaje para el servidor" />
                    <iconPacks:PackIconCodicons
                        Width="18"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryForegroundColor}"
                        Kind="Info"
                        ToolTip="Escribe el mensaje que le deseas enviar al servidor."
                        ToolTipService.InitialShowDelay="0" />
                </Grid>
                <TextBox
                    x:Name="tbClient"
                    Grid.Row="1"
                    Margin="0,0,0,5"
                    Background="#F9F9F9" />
                <Grid Grid.Row="2" Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="1"
                        Margin="0,2,0,2"
                        Padding="4,2"
                        FontSize="12"
                        Foreground="{DynamicResource PrimaryForegroundColor}"
                        Text="Respuesta del servidor" />
                    <iconPacks:PackIconCodicons
                        Width="18"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryForegroundColor}"
                        Kind="Info"
                        ToolTip="Acá verás el mensaje de respuesta que te ha enviado el servidor."
                        ToolTipService.InitialShowDelay="0" />
                </Grid>

                <TextBox
                    Grid.Row="3"
                    Margin="0,0,0,5"
                    Background="#F9F9F9"
                    Foreground="#388E3C"
                    IsReadOnly="True"
                    Text="{Binding ClientNetworkUtilities.ResponseFromServer}" />
                <Button
                    Grid.Row="4"
                    HorizontalAlignment="Stretch"
                    Command="{Binding SendBufferToServerCommand}"
                    CommandParameter="{Binding Text, ElementName=tbClient}"
                    Content="Enviar"
                    Cursor="Hand" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
