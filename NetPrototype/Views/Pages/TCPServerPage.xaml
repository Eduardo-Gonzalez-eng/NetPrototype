<UserControl
    x:Class="NetPrototype.Views.Pages.TCPServerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:NetPrototype.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:NetPrototype.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NetPrototype.ViewModels.Pages"
    d:DesignHeight="450"
    d:DesignWidth="400"
    Background="{DynamicResource PrimaryBackgorundColorPage}"
    Foreground="{DynamicResource PrimaryForegroundColor}"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:TCPServerViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:StringToEnumConverter x:Key="StringToEnumConverter" />
    </UserControl.Resources>

    <Border Padding="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">


                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="1"
                        Padding="4,2"
                        FontSize="12"
                        Foreground="{DynamicResource PrimaryForegroundColor}"
                        Text="Inicia un servidor en este computador" />
                    <iconPacks:PackIconCodicons
                        Width="18"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryForegroundColor}"
                        Kind="Info"
                        ToolTip="Inicia un servidor en este computador para que diferentes clientes se puedan conectar. (any interface)"
                        ToolTipService.InitialShowDelay="0" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBox
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Text="{Binding ServerPort}"
                        TextAlignment="Left" />

                    <Button
                        Grid.Column="1"
                        Width="120"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Command="{Binding ToggleServerCommand}">
                        <StackPanel Orientation="Horizontal" />
                    </Button>

                    <TextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Text="{Binding MessageToClientOfServerStatus}"
                        TextAlignment="Left" />
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,10,0,10">
                <TextBlock
                    Padding="4,2"
                    FontSize="12"
                    Foreground="{DynamicResource PrimaryForegroundColor}"
                    Text="Método" />
                <ComboBox
                    Width="180"
                    MinWidth="180"
                    HorizontalAlignment="Left"
                    ItemsSource="{Binding MethodProcess}"
                    SelectedIndex="{Binding SelectedBufferProcessorMethod, Converter={StaticResource StringToEnumConverter}, ConverterParameter={x:Type vm:TCPServerViewModel}}" />
            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Margin="0,2,0,2"
                        Padding="4,2"
                        FontSize="12"
                        Foreground="{DynamicResource PrimaryForegroundColor}"
                        Text="Mensaje desde un cliente" />
                    <iconPacks:PackIconCodicons
                        Grid.Column="1"
                        Width="18"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryForegroundColor}"
                        Kind="Info"
                        ToolTip="Acá verás el mensaje que ha enviado un cliente al servidor."
                        ToolTipService.InitialShowDelay="0" />
                </Grid>

                <TextBox
                    Grid.Row="1"
                    VerticalAlignment="Stretch"
                    Background="#F9F9F9"
                    Foreground="#388E3C"
                    IsReadOnly="True"
                    Text="{Binding MessageFromClient}" />

                <Grid Grid.Row="2" Margin="0,8,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox Content="Respuesta automática al cliente" IsChecked="{Binding IsAutomaticResponse}" />
                    <iconPacks:PackIconCodicons
                        Grid.Column="1"
                        Width="18"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryForegroundColor}"
                        Kind="Info"
                        ToolTip="Escribe el mensaje que responderá tu servidor a los clientes conectados."
                        ToolTipService.InitialShowDelay="0" />
                </Grid>

                <TextBox
                    Grid.Row="3"
                    VerticalAlignment="Stretch"
                    Background="#F9F9F9"
                    Text="{Binding MessageFromServerToClient}" />
                <Button
                    Grid.Row="5"
                    Margin="0,4,0,0"
                    HorizontalAlignment="Right"
                    Content="Aplicar cambios"
                    Cursor="Hand" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
