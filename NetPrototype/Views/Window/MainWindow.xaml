<Window
    x:Class="NetPrototype.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customIU="clr-namespace:NetPrototype.Controls.TitleBarControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NetPrototype"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:NetPrototype.Views.Pages"
    Width="550"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Margin="10"
        Padding="0"
        Background="White"
        CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="10"
                Direction="270"
                Opacity="0.5"
                ShadowDepth="2"
                Color="Black" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <customIU:CustomTitleBar />

            <Border Grid.Row="1">
                <TabControl
                    BorderThickness="0"
                    Style="{DynamicResource TabControlStyle1}"
                    TabStripPlacement="Top">
                    <TabItem
                        Padding="10"
                        Header="Cliente"
                        Style="{DynamicResource TabItemStyle1}">
                        <views:TCPClientPage />
                    </TabItem>
                    <TabItem
                        Padding="5,4"
                        Header="Servidor"
                        Style="{DynamicResource TabItemStyle1}">
                        <views:TCPServerPage ServerTitle="Titulo central" />
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

    </Border>
</Window>
